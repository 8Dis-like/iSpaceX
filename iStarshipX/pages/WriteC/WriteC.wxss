    justify-content: center;
}

.MediaContainer{
    margin-left: 5%;
    margin-right: 5%;
    margin-bottom: 100rpx;
    width: 90%;
    display: flex;
    flex-wrap: wrap;
}

.InnerHolder{
    display: flex;
    width: calc(32% - 10rpx);
    height: 200rpx;
    padding-top: 14rpx;
    padding-left: 14rpx;
}

.InnerHolder2{
    display: flex;
    width: calc(32% - 10rpx);
    height: 200rpx;  
    margin-top: 14rpx;
    margin-left: 14rpx;
    background-color: rgb(243, 243, 243);
    
}

.Hide{
    display: none;
}

.ChooseMediaIcon{
    width:50%;
    height:50%;
    margin: 46rpx;
}

.AttenIcon{
    display: inline-block;
    width: 60rpx;
