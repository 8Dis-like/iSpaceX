/* pages/mine/mine.wxss */
/* 使用page就是为了保证  满屏 */

page {
  width: 100%;
  height: 100%;
}

.view_contain {
  width: 100%;
  height: 100%;
  background: #f0eeed
}

/* 第一部分 */

.view_1 {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 40%;
  background: #f6f6f8;
  z-index:-1;
}

.background{
  z-index:0;
  width: 100%;
  height: 40%;
  position :absolute;
  background-color: white;
}

.view_image_text {
  z-index:1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.image_radius {
  height: 70px;
  width: 70px;
  border-radius: 50px;
  background-color: black;
}

.name{
  color:#0eacf5;
  font-size:20px;
  font-weight:600;
}

.signature{
  color:black;
  font-size:15px;
  font-weight:300;
}

/* 第二部分 */

.view_2 {
    width: 100%;
    height: 20%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background: #FFFAFA;
  }
  
  .view_tupianwenzi {
    display: flex;
    flex-direction: column;
    width: 150rpx;
    align-items: center;
    margin-left: 30rpx;
    margin-right: 30rpx;
  }
  
  .image_tupian {
    display: flex;
    width: 100rpx;
    height: 100rpx;
  }
  
  /* 第三部分 */
  
  .view_3 {
    width: 100%;
    height: 20%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background: #FFFAFA;
  }
  
  .list-item {
    display: flex;
    flex-direction: column;
    width: 150rpx;
    align-items: center;
    margin-left: 30rpx;
    margin-right: 30rpx;
    
  }
  
  .item-image {
    display: flex;
    width: 100rpx;
    height: 100rpx;
  }
   
  
  /*隐藏输入框*/
  .modal_input{
    height:100rpx;
  }
  
  