    margin-left: 5%;
    margin-bottom: 30rpx;
   
}

button{
    margin-top: 80rpx;
    margin-bottom: 40rpx;
}

.InputInfo{
    width: 95%;
    margin-left: 5%;
    height: 350rpx;
    border-top:2rpx solid lightgray;
}

.Locate{
    display: flex;
    width: 735rpx;
    height: 85rpx;
    padding: 12.5rpx 0 12.5rpx 15rpx;
}

.LocateLaying{
    display: flex;
    flex-direction: row;
    text-align: left;
}

.LocateIcon{
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    padding: 8rpx 8rpx 8rpx 10rpx;
}

.LocateDes{
    display: inline-block;
    height: 85rpx;
    width: 380rpx;

    font-size: 34rpx;
    padding-left: 170rpx;
    padding-top: 18rpx;
    margin-left: 50rpx;
}

.LocateDes2{
    display: inline-block;
    height: 85rpx;
    width: 580rpx;
    font-size: 32rpx;
    color: lightgreen;
    text-align: center;
    padding-top: 18rpx;
    margin-left: 20rpx;
}

.RightIcon{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    padding-top: 20rpx;
}

.spereator{
    margin: 0 auto;
    width: 90%;
    height: 2rpx;
    background: linear-gradient(to right, #ead6ee, #f56ead, #ead6ee);
    align-items: center;
    justify-content: center;
}

.MediaContainer{
    margin-left: 5%;
    margin-right: 5%;
    margin-bottom: 100rpx;
    width: 90%;
    display: flex;
    flex-wrap: wrap;
}

.InnerHolder{
    display: flex;
    width: calc(32% - 10rpx);
    height: 200rpx;
    padding-top: 14rpx;
    padding-left: 14rpx;
}

.InnerHolder2{
    display: flex;
    width: calc(32% - 10rpx);
    height: 200rpx;  
    margin-top: 14rpx;
    margin-left: 14rpx;
    background-color: rgb(243, 243, 243);
    
}

.Hide{
    display: none;
}

.ChooseMediaIcon{
    width:50%;
    height:50%;
    margin: 46rpx;
}

.AttenIcon{
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    padding: 8rpx 8rpx 8rpx 10rpx;
}
