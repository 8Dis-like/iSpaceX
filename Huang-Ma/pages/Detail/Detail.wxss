/* pages/Detail/Detail.wxss */
.container {
    padding: 0;
    font-size: 14rpx;
    color: #000;
}

.TitleHolder{
    position: relative;
    width: 650rpx;
    padding: 40rpx 50rpx 30rpx;
    background-color: #FFCC66;
    color: #fff;
    font-size: 38rpx;
    line-height: 48rpx;
}
.PublisherInfoHolder{
    position: relative;
    width: 750rpx;
    height: 150rpx;
    background: #fff;
}
.HoldON{
    position: absolute;
    top: 0;
    width: 100%;
    height: 120rpx;
    background: #FFCC66;
}
.Pholder{
    display: flex;
    position: relative;
    margin: 0 auto;
    width: 625rpx;
    height: 94rpx;
    padding: 30rpx;
    background: #fff;
    border: solid 1px #e4e4e4;
    border-radius: 6rpx;
    box-shadow: 0 1px 2px #b6b6b6;
    margin-top: 50rpx;
}
.WxP{
    text-align: left;
    width: 90rpx;
    height: 90rpx;
}
.Pholder .WxP image {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}
.Pinfo{
    flex: 5;
    text-align: left;
    padding: 10rpx 20rpx;
    line-height: 38rpx;
    flex-grow: 1;
}
.wxnameholder{
    font-size: 34rpx;
}
.des{
    font-size: 23rpx;
    color: #797878;
    line-height: 28rpx;
}

.MainContentHolder{
    width: 90%;
    padding: 28rpx 35rpx;
    text-align: left;
    background-color: white;
}
.MainContentHolder text{
    
    font-size: 30rpx;
    color: black;
}
.spereator{
    margin: 0 auto;
    width: 90%;
    height: 2rpx;
    background: linear-gradient(to right, #f5e4c2, #FFCC66, #f5e4c2);
    align-items: center;
    justify-content: center;
    margin-bottom: 35rpx;
}

.TypeHolder{
    margin-top: 100rpx;
    display: flex;
    width: 735rpx;
    height: 45rpx;
    padding: 12.5rpx 0 12.5rpx 15rpx;
}
.LocateHolder{
    margin-top: 10rpx;
    margin-bottom: 25rpx;
    display: flex;
    width: 735rpx;
    height: 45rpx;
    padding: 12.5rpx 0 12.5rpx 15rpx;
}
.LocateLaying{
    display: flex;
    flex-direction: row;
    text-align: center;
}
.LocateDes{
    display: inline-block;
    height: 85rpx;
    font-style: italic;
    color: lightskyblue;
    font-size: 28rpx;
    padding-top: 18rpx;
    margin-left: 50rpx;
}
.TypeDes{
    display: inline-block;
    height: 85rpx;
    color: rgb(165, 27, 27);
    font-size: 30rpx;
    padding-top: 18rpx;
    margin-left: 50rpx;
}
.MediaContainer{
    margin-top: 25rpx;
    margin-left: 5%;
    margin-right: 5%;
    margin-bottom: 100rpx;
    width: 90%;
    display: flex;
    flex-wrap: wrap;
}
.InnerHolder{
    display: flex;
    width: calc(32% - 10rpx);
    height: 200rpx;
    padding-top: 14rpx;
    padding-left: 14rpx;
}
.DateContainer{
    margin-bottom: 100rpx;
    margin-left: 55%;
    font-size: 26rpx;
    color: lightslategray;
}

.Director{
    display: flex;
    position: fixed;
    bottom: 0;
    height: 60rpx;
    border-top: solid 1px #ebebeb;
    background-color: white;
    width: 670rpx;
    padding: 20rpx 40rpx;
}
.OneHolder{
    justify-content: space-between;
    padding: 5rpx 0 0 90rpx;
}
.TwoHolder{
    color: #d81e06;
    justify-content: space-between;
    padding: 5rpx 0 0 90rpx;
}
.OneHolderimage{
    height: 50rpx;
    width: 50rpx;
}
.LikeTxt{
    font-weight: 20rpx;
}
.SenHolder{
    margin-left: 100rpx;
    justify-content: space-between;
    padding: 5rpx 0 0 30rpx;
}
.SenHolder image{
    height: 50rpx;
    width: 50rpx;
}
.SenHolder text{
    
    font-weight: 20rpx;
}
.progressHolder{
    margin-left: 18%;
    text-align: center;
    font-size: 22rpx;
}
.progressHolder text{
    display: inline-block;
    padding: 15rpx 20rpx;
    color: #40bcd0;
    border: solid 2px #40bcd0;
    border-radius: 6rpx;
    font-weight: 28rpx;
}
.CTitle{ /*在这里设计"评论区"字样的形式*/
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 60rpx;
}
.Commentcontainer{
    padding: 0;
    font-size: 14rpx;
    background-color: #FFCC66;
    color: #000;
}
.feed-item{/**/
    width: 690rpx;
    padding: 30rpx 30rpx 20rpx;
    margin: 7rpx 0 6rpx 0;
    background: #ffffff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    box-shadow: 0 2px 5px #eeeeee;
}
.feed-source{
    width: 690rpx;
    left: 0;
    height: 50rpx;
}
.avatar{
    position: relative;
    display: inline-block;
}
.avatarimage{
    display: inline-block;
    width: 55rpx;
    height: 55rpx;
    border-radius: 45rpx;
    top: 10rpx;
    vertical-align: middle;
}
.Commentcontainer .feed-item .feed-source text{
    /*position: absolute;*/
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    vertical-align: middle;
    margin: -74rpx 10rpx 0 85rpx;
    color: lightskyblue;
    font-size: 28rpx;
}
.Apper{
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    vertical-align: middle;
    margin: -45rpx 14rpx 0 85rpx;
    color: #c0c0c0;
    font-size: 20rpx;
    float: right;
}
.feed-content{
    padding: 10rpx 0 0 0;
}
.content-body{
    margin-bottom: 40rpx;
    padding: 10rpx 0 0 0;
    /*height: 10rpx;*/
    font-size: 24rpx;
    line-height: 28rpx;
    color: #3b3b3b;
  }


